<div class="container">
  <h1 class="title">Update your task</h1>

    <div class="task-card">
      <%= form_for(@task) do |f| %>
      <%= f.label :title, class: "label" %>
      <%= f.text_field :title, class: "input"%>
      <%= f.label :details, class: "label" %>
      <%= f.text_field :details, class: "input"%>
      <%= f.label :completed, class: "label" %>
      <%= f.check_box :completed %>
      <%= f.submit "update", class: "btn"%>
      <% end %>
    </div>
</div>

















